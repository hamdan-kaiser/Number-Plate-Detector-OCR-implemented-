<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hamdan.JuniorDesign.DigitalNumPlateDetector"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="27" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="Number Plate Detector"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hamdan.JuniorDesign.DigitalNumPlateDetector.splash.SplashScreen"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hamdan.JuniorDesign.DigitalNumPlateDetector.editing.PhotoEditActivity"
            android:label="@string/title_activity_photo_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="hamdan.JuniorDesign.DigitalNumPlateDetector.photoedit.PhotoEditingActivity"
            android:label="@string/title_activity_photo_editing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="hamdan.JuniorDesign.DigitalNumPlateDetector.MainActivity"
            android:label="Parking Management System" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="hamdan.JuniorDesign.DigitalNumPlateDetector.SeparateSentencesActivity" />
        <activity android:name="hamdan.JuniorDesign.DigitalNumPlateDetector.DisplaySQLiteDataActivity" />
        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>